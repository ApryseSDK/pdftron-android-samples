<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAppTheme" parent="PDFTronAppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionMenuTextColor">@color/app_color_icon</item>
        <!-- Drawer -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Action bar -->
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>

        <!--Style customization-->
        <item name="toolbarNavigationButtonStyle">@style/ToolbarButtonNavigationStyle</item>
        <item name="thumbnail_slider">@style/CustomThumbnailSliderStyle</item>
        <item name="custom_bookmarks_tab_layout">@style/CustomBookmarksTabLayoutStyle</item>

        <item name="pt_annotation_toolbar_style">@style/CustomAnnotationToolbarStyle</item>
        <item name="pt_bottom_bar_style">@style/CustomBottomBarStyle</item>
        <item name="pt_preset_bar_style">@style/CustomPresetBarStyle</item>
        <item name="pt_pdf_tab_layout_style">@style/CustomPdfTabLayoutStyle</item>

        <!--If using non-NoActionBar theme as parent, uncomment below-->
        <!--Disable action bar start-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--Disable action bar end-->
        <item name="thumbnail_browser">@style/CustomThumbnailBrowserStyle</item>
    </style>

    <style name="CustomThumbnailBrowserStyle" parent="ThumbnailBrowserStyle">
        <item name="showAddBookmarkMenuItem">false</item>
    </style>

    <style name="CustomPdfTabLayoutStyle" parent="PdfTabLayoutStyle">
        <item name="tabSelectedTextColor">@color/app_color_icon</item>
        <item name="tabTextColor">@color/app_color_icon</item>
    </style>

    <style name="ToolbarButtonNavigationStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/app_color_icon</item>
    </style>

    <style name="CustomAnnotationToolbarStyle" parent="PTAnnotationToolbarTheme">
        <!-- Annotation toolbar background color-->
        <item name="colorBackground">@color/colorPrimary</item>
        <!-- Background color of a selected button -->
        <item name="selectedBackgroundColor">@color/annotation_tool_background</item>
        <!-- Default icon color for a button -->
        <item name="iconColor">@color/app_color_icon</item>
    </style>

    <style name="CustomBottomBarStyle" parent="PTBottomBarTheme">
        <!-- Annotation toolbar background color-->
        <item name="colorBackground">@color/colorPrimary</item>
        <!-- Background color of a selected button -->
        <item name="selectedBackgroundColor">@color/annotation_tool_background</item>
        <!-- Default icon color for a button -->
        <item name="iconColor">@color/app_color_icon</item>
    </style>

    <style name="CustomPresetBarStyle" parent="PTPresetBarTheme">
        <!-- Annotation toolbar background color-->
        <item name="colorBackground">@color/colorPrimary</item>
        <!-- Background color of a selected button -->
        <item name="selectedBackgroundColor">@color/annotation_tool_background</item>
        <!-- Default icon color for a button -->
        <item name="iconColor">@color/app_color_icon</item>
    </style>

    <style name="CustomThumbnailSliderStyle" parent="ThumbnailSliderStyle">
        <item name="leftMenuItemColor">@color/app_color_icon</item>
        <item name="rightMenuItemColor">@color/app_color_icon</item>
        <item name="seekbarColor">@color/app_color_icon</item>
        <item name="colorBackground">@color/colorPrimary</item>
    </style>

    <style name="CustomBookmarksTabLayoutStyle" parent="BookmarksTabLayoutStyle">
        <item name="tabTintColorDialog">@color/app_color_icon</item>
        <item name="tabTintSelectedColorDialog">@color/app_color_icon</item>
        <item name="tabBackgroundSheet">@color/annot_toolbar_background_primary</item>
        <item name="tabBackgroundDialog">@color/colorPrimary</item>
    </style>

    <style name="PdfTabLayoutStyle" parent="BasePdfTabLayoutStyle">
        <item name="tabTextAppearance">@style/CustomPdfTabTextAppearance</item>
    </style>

    <style name="CustomPdfTabTextAppearance" parent="PdfTabTextAppearance">
        <item name="android:textColor">@color/selector_tab_text_color</item>
    </style>

    <style name="FloatingButtonNavStyle" parent="BaseFloatingButtonNavStyle">
        <item name="tint">@color/app_color_icon</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
